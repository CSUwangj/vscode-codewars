{
  "name": "vscode-codewars",
  "displayName": "vscode-codewars",
  "description": "Challenge yourself through Codewars at VSCode.",
  "version": "0.0.1",
  "publisher": "CSUwangj",
  "repository": "https://github.com/CSUwangj/vscode-codewars",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-codewars.nextChallenge",
        "title": "Codewars: Next Challenge"
      },
      {
        "command": "vscode-codewars.submitSolution",
        "title": "Codewars: Submit Current Solution"
      },
      {
        "command": "vscode-codewars.testSolution",
        "title": "Codewars: Test Current Solution"
      },
      {
        "command": "vscode-codewars.signin",
        "title": "Codewars: Sign In"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codewars",
          "title": "Codewars",
          "icon": "resources/codewars.svg"
        }
      ]
    },
    "views": {
      "codewars": [
        {
          "id": "codewars",
          "name": "Codewars"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vscode-codewars.signin",
          "when": "view == codewars",
          "group": "navigation@1"
        }
      ],
      "explorer/context": [
        {
          "command": "vscode-codewars.testSolution",
          "when": "explorerResourceIsFolder == false",
          "group": "codewars@1"
        },
        {
          "command": "vscode-codewars.submitSolution",
          "when": "explorerResourceIsFolder == false",
          "group": "codewars@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts --quiet --fix",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.0.1",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.3.2",
    "fs-extra": "^11.1.0",
    "markdown-it": "^13.0.1",
    "slugify": "^1.6.5"
  }
}
